<% layout('layout/boilerplate') %>

<h1>Select Articles</h1>

<% for (let article of articles) { %>
<div class="card  mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= article.title %> </h5>
    <p class=""><b><%= article.author_name %> </b></p>
    <!-- <p class="card-text"><%= article.content %> </p> -->
    <p class="card-text">Posted on : <%= article.date %> </p>
    <p class="card-text">Rating: <%= article.avg_rating %> </p>
    <a href="/article/<%= article.article_id %>/show" class="btn btn-primary">Read</a>
    <a href="/article/<%= article.article_id %>/edit" class="btn btn-success">Edit</a>
  </div>
</div>
    <% } %>  