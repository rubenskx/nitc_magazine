<% layout('layout/boilerplate') %>

<h1>Select Articles</h1>

<% for (let article of articles) { %>
<div class="card mb-3">
  <div class="row card-body">
      <div class="col-sm-6">
      <img src="<%= article.img %>" class="img-fluid" alt="article_img"/> 
    </div>
    <div class="col-sm-6 mt-5">
    <p class="card-text"><b><%= article.author_name %></b> </p>
    <h5 class="card-title"><%= article.title %></h5>
    <p class="card-text"><%= article.name %> </p>
    <p class="card-text"><%= article.content.substring(0,150) %>...</b></p>
    <p class="card-text">Posted on : <%= article.edited_date %> </p>
    <p class="card-text">Rating: <%= article.avg_rating %></p>
    <a href="/select/<%= article.article_id %>/show" id="submit" class="btn-btn ms-5" style="width:40%;"
      >Read</a
    >
    <a href="/article/<%= article.article_id %>/edit" id="edit"class="btn-btn" style="width:40%;"
      >Edit</a
    >
    </div>
  </div>
</div>
<% } %>
