
<form action="/article/edit/<%=article.article_id%>" method="POST">
    <div class="mb-3">
      <label for="articleHeading" class="form-label">Heading</label>
      <input name="articleHeading" type="text" class="form-control" id="articleHeading" placeholder="<%=article.title%>">
    </div>
    <div class="mb-3">
        <label for="articleAuthor" class="form-label">Name of Author</label>
        <input name="articleAuthor" type="text" class="form-control" id="articleHeading" placeholder="<%=article.author_name%>" >
      </div>
    <div class="form-group shadow-textarea">
        <textarea name="articleContent" class="form-control z-depth-1" id="articleContent" rows="10" placeholder=""><%=article.content%></textarea>
    </div>

    <br>
    <button type="submit" class="btn btn-primary">Edit</button>
    <form action="/article/delete/<%=article.article_id%>">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
  </form>