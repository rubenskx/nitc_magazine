<% layout('layout/boilerplate') %>

<form action="/article/<%=article.article_id%>/edit" method="POST">
    <div class="mb-3">
      <label for="articleHeading" class="form-label">Heading</label>
      <input name="articleHeading" type="text" class="form-control" id="articleHeading" value="<%=article.title%>">
    </div>
    <div class="mb-3">
        <label for="articleAuthor" class="form-label">Name of Author</label>
        <input name="articleAuthor" type="text" class="form-control" id="articleHeading" value="<%=article.author_name%>" >
      </div>
    <div class="form-group shadow-textarea">
        <textarea name="articleContent" class="form-control z-depth-1" id="articleContent" rows="10" placeholder=""><%=article.content%></textarea>
    </div>

    <br>
    <div class="row">
    <button type="submit" class="btn-btn col-6" id="edit">Edit</button>
    <form action="/article/<%=article.article_id%>/delete" method="POST">
    <button type="submit" class="btn-btn col-6" id="log">Delete</button>
    </form>
    </div>
  </form>
