<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="stylesheet" href="/stylesheets/flashMessage.css" />
    <link rel="stylesheet" href="/stylesheets/searchButton.css" />
  </head>

  <body class="d-flex flex-column vh-100">
    <%- include('../partials/navbar') %> <%- include('../partials/flash') %>
    <main class="container mt-5"><%- body %></main>
    <%- include('../partials/footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
      const links = document.querySelectorAll(".links");
      const home = document.querySelector("#home");
      const addReviewer = document.querySelector("#add_reviewer");
      const addArticle = document.querySelector("#add_article");
      const reviewer = document.querySelector("#reviewer_page");
      const style = "3px solid black";

      console.log(window.location.href);

      if (window.location.href.includes("select")) {
        console.log("home!");
        home.style.borderBottom = style;
      }

      if (window.location.href.includes("reviewer/create")) {
        addReviewer.style.borderBottom = style;
      }

      if (window.location.href.includes("article/create")) {
          addArticle.style.borderBottom = style;
      }

      if (window.location.href.includes("reviewer") && !window.location.href.includes("reviewer/create")) {
        reviewer.style.borderBottom = style;
      }

      function searchToggle(obj, evt){
          console.log("hello");
        var container = $(obj).closest('.search-wrapper');
            if(!container.hasClass('active')){
                container.addClass('active');
                evt.preventDefault();
            }
            else if(container.hasClass('active') && $(obj).closest('.input-holder').length == 0){
                container.removeClass('active');
                container.find('.search-input').val('');
            }
        }

    </script>
  </body>
</html>
